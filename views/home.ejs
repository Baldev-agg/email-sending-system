<!DOCTYPE html>
<html>

<head>
  <title>Email Sender</title>
  <style>
    body {
      font-family: Arial;
      background: #f0f0f0;
      padding: 20px;
    }

    .container {
      max-width: 500px;
      margin: 0 auto;
      background: white;
      padding: 30px;
      border-radius: 8px;
    }

    h1 {
      color: #333;
    }

    .form-group {
      margin: 15px 0;
    }

    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }

    input,
    textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 4px;
      box-sizing: border-box;
    }

    button {
      width: 100%;
      padding: 10px;
      background: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 10px;
    }

    button:hover {
      background: #0056b3;
    }

    .tab-buttons {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    .tab-btn {
      padding: 10px 20px;
      cursor: pointer;
      border: none;
      background: #ddd;
      border-radius: 4px;
    }

    .tab-btn.active {
      background: #007bff;
      color: white;
    }

    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>ðŸ“§ Email Sender</h1>

    <!-- Tab Buttons -->
    <div class="tab-buttons">
      <button class="tab-btn active" onclick="showTab('send')">Send Now</button>
      <button class="tab-btn" onclick="showTab('schedule')">Schedule Email</button>
    </div>

    <!-- Send Email Tab -->
    <div id="send" class="tab-content active">
      <h2>Send Email Now</h2>
      <form action="/send-email" method="POST">
        <div class="form-group">
          <label>Recipient Email:</label>
          <input type="email" name="recipient" required>
        </div>
        <div class="form-group">
          <label>Subject:</label>
          <input type="text" name="subject" required>
        </div>
        <div class="form-group">
          <label>Message:</label>
          <textarea name="message" rows="5" required></textarea>
        </div>
        <button type="submit">Send Email Now</button>
      </form>
    </div>

    <!-- Schedule Email Tab -->
    <div id="schedule" class="tab-content">
      <h2>Schedule Email</h2>
      <form action="/schedule-email" method="POST">
        <div class="form-group">
          <label>Recipient Email:</label>
          <input type="email" name="recipient" required>
        </div>
        <div class="form-group">
          <label>Subject:</label>
          <input type="text" name="subject" required>
        </div>
        <div class="form-group">
          <label>Message:</label>
          <textarea name="message" rows="5" required></textarea>
        </div>
        <div class="form-group">
          <label>Schedule Time:</label>
          <input type="datetime-local" name="scheduleTime" required>
        </div>
        <button type="submit">Schedule Email</button>
      </form>
    </div>
  </div>

  <script>
    function showTab(tabName) {
      document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
      document.querySelectorAll('.tab-btn').forEach(el => el.classList.remove('active'));
      document.getElementById(tabName).classList.add('active');
      event.target.classList.add('active');
    }
  </script>
</body>

</html>